<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/myhome_background">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#ccddee"
            android:orientation="horizontal"
            app:layout_heightPercent="15%">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/head_portrait"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/userId"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/userBalance"
                            android:textColor="#000000"/>
                </LinearLayout>


        </LinearLayout>

        <ListView
            android:id="@+id/list_room"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:scrollbars="none"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="18%"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="30%">

        </ListView>

        <Button
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginLeft="6sp"
            android:onClick="createRoomClick"
            android:layout_centerInParent="true"
            android:background="@drawable/create_room_btn"
            />
        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="6sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5%"
            android:onClick="joinRoomClick"
            android:background="@drawable/join_room_btn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ccddee"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="15%">

        </LinearLayout>

</android.support.percent.PercentRelativeLayout>
